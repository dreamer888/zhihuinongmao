<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="NavigationMapper">

	<!--表名 -->
	<sql id="tableName">
		shop_navigation
	</sql>

	<!-- 字段 -->
	<sql id="Field">
		navigation_img,
		navigation_name,
		navigation_url,
		navigation_app_url,
		sort,
		navigation_id,
		type,
		market_id
	</sql>

	<!-- 字段值 -->
	<sql id="FieldValue">
		#{navigation_img},
		#{navigation_name},
		#{navigation_url},
		#{navigation_app_url},
		#{sort},
		#{navigation_id},
		#{type},
		#{market_id}
	</sql>

	<!-- 新增 -->
	<insert id="save" parameterType="pd">
		insert into
		<include refid="tableName"></include>
		(
		<include refid="Field"></include>
		) values (
		<include refid="FieldValue"></include>
		)
	</insert>

	<!-- 删除 -->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where
		navigation_id = #{navigation_id}
	</delete>

	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set
		navigation_img = #{navigation_img},
		navigation_name = #{navigation_name},
		navigation_url = #{navigation_url},
		sort = #{sort},
		navigation_id = navigation_id
		where
		navigation_id = #{navigation_id}
	</update>

	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where
		navigation_id = #{navigation_id}
	</select>

	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and

			navigation_name like concat(concat('%', #{pd.keywords}),'%')

		</if>
		ORDER BY SORT
	</select>

	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from
		<include refid="tableName"></include>
		where 1=1
		<if test="market_id!= null and market_id != ''">
			and type = 1 and market_id = #{market_id}
		</if>
		<if test="market_id == null">
			and type !=1
		</if>
		order by sort
	</select>

	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where
		navigation_id in
		<foreach item="item" index="index" collection="array" open="("
			separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!-- 壹仟科技 357788906 -->
</mapper>